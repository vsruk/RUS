# Doxygen konfiguracijska datoteka za C jezik ugradbeni sustav

# Ime i verzija projekta
PROJECT_NAME           = Lab1               # Ime vašeg projekta
PROJECT_BRIEF          = "Lab1: Ugradbeni sustav s prekidima u C jeziku"  # Kratki opis projekta
PROJECT_LOGO           =                     # Putanja do logotipa projekta (ako postoji)
OUTPUT_DIRECTORY       = Lab1/docs           # Lokacija gdje će se spremiti generirana dokumentacija
CREATE_SUBDIRS         = YES                 # Kreiraj poddirektorije za izlazne datoteke
DOXYFILE_ENCODING      = UTF-8               # Kodiranje za Doxyfile datoteku

# Izvorne datoteke i direktoriji
INPUT                  = Lab1                # Direktorij koji sadrži izvorni kod (Lab1)
FILE_PATTERNS          = *.c *.h             # Ekstenzije datoteka koje će biti uključene u dokumentaciju

# Izlazni format
GENERATE_HTML          = YES                 # Generiraj HTML dokumentaciju
HTML_OUTPUT            = html                # Direktorij za pohranu HTML dokumenata (relativno prema OUTPUT_DIRECTORY)
GENERATE_LATEX         = NO                  # Isključi generiranje LaTeX dokumentacije (opcionalno)
GENERATE_RTF           = NO                  # Isključi generiranje RTF dokumentacije (opcionalno)

# Dodatne postavke za HTML generaciju
HTML_HEADER            =                     # Putanja do prilagođene HTML zaglavlja (ako postoji)
HTML_FOOTER            =                     # Putanja do prilagođene HTML podnožja (ako postoji)
HTML_COLORSTYLE        = AUTOMATIC           # Automatski odabir boja za stilove

# Grafički elementi (za poboljšanje vizualizacije)
CLASS_DIAGRAMS         = YES                 # Generiraj dijagrame klasa (ako su primjenjivi)
GRAPHVIZ_DOT           = YES                 # Generiraj Graphviz dijagrame (ako su primjenjivi)
TEMPLATE_RELATIONS     = YES                 # Generiraj relacije između datoteka (npr. naslijeđivanje, suradnja)

# Postavke za generiranje dokumentacije
RECURSIVE              = YES                 # Traži izvorne datoteke i u poddirektorijima
EXTRACT_ALL            = YES                 # Izvuci dokumentaciju iz svih datoteka, čak i ako nemaju dokumentacijske komentare
EXTRACT_PRIVATE        = YES                 # Uključi privatne članove u dokumentaciju (opcionalno)
EXTRACT_STATIC         = YES                 # Uključi statičke članove u dokumentaciju (opcionalno)

# Postavke za dokumentaciju datoteka
FILE_VERSION_FILTER    =                     # Filtriraj uklanjanje verzija iz datoteka (opcionalno)
OPTIMIZE_OUTPUT_FOR_C  = YES                 # Optimiziraj izlaz za C stil (ne za C++ klase)

# Upozorenja
WARNINGS               = YES                 # Omogući upozorenja u slučaju bilo kakvih problema
WARN_IF_UNDOCUMENTED   = YES                 # Upozori ako postoje ne-dokumentirani članovi ili funkcije
WARN_IF_INCOMPLETE_DOC = YES                 # Upozori ako postoje nedovršeni dokumentacijski komentari

# Opcionalne postavke (za prilagodbe)
ENABLE_PREPROCESSING   = YES                 # Omogući preprocesiranje izvornog koda
MACRO_EXPANSION        = YES                 # Proširi sve makroe
EXCLUDE_SYMLINKS       = YES                 # Isključi simboličke linkove iz ulaznih datoteka

# Prilagodbe izlaza
OUTPUT_LANGUAGE        = English             # Jezik izlazne dokumentacije
